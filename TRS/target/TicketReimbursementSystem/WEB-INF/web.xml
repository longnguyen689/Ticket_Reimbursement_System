<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<!--this file sets up the web service and map -->
<web-app>
  <display-name>Archetype Created Web Application</display-name>

<servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>main.servlet.LoginServlet</servlet-class>
</servlet>

<servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>main.servlet.LogoutServlet</servlet-class>
</servlet>

    <!--servlet mapping place -->
<servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/validate.do</url-pattern>
</servlet-mapping>

<servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logged.out</url-pattern>
</servlet-mapping>

</web-app>
